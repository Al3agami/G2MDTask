<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Activities.SharePhotoActivity">
	<ImageView
		android:id="@+id/iv_share"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:src="@mipmap/ic_launcher"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/btn_select_photo"/>
	<Button
		android:id="@+id/btn_select_photo"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:textColor="@color/white"
		android:text="Select Photo"
		android:textSize="16dp"
		app:layout_constraintBottom_toTopOf="@+id/btn_upload_photo"
		app:layout_constraintStart_toStartOf="@+id/btn_upload_photo"
		android:layout_marginBottom="20dp"
		android:onClick="selectPhoto"/>
	<Button
		android:id="@+id/btn_upload_photo"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:textColor="@color/white"
		android:text="Share Photo"
		android:textSize="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginBottom="150dp"
		android:onClick="sharePhoto"/>

</android.support.constraint.ConstraintLayout>